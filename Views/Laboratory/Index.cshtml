@model IEnumerable<MvcLabManager.Models.Laboratory>

@{
    ViewData["Title"] = "Laboratórios";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhum laboratório cadastrado.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Id</th> 
                <th>Número</th> 
                <th>Nome</th> 
                <th>Bloco</th>
            </tr>
            <tbody>
                @foreach(var laboratory in Model)
                {
                    <tr>
                        <td>@laboratory.Id</td> 
                        <td>@laboratory.Number</td> 
                        <td>@laboratory.Name</td> 
                        <td>@laboratory.Block</td> 
                        <td>
                            <a href="/Laboratory/Show/@laboratory.Id">
                                <button type="button">Detalhes</button>
                            </a>
                            <a href="/Laboratory/Delete/@laboratory.Id">
                                <button type="button">Deletar</button>
                            </a>
                            <a href="/Laboratory/Update/@laboratory.Id">
                                <button type="button">Atualizar</button>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </thead>
    </table>
}

